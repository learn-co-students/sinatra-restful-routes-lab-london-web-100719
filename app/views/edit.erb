<form method="POST" action="/recipes/<%=@recipe.id%>">
<input type="hidden" name="_method" value="PATCH">

<label for="name">Name: </label>
<input type="text" id="name" name="recipes[name]" value="<%=@recipe.name%>">

<label for="ingredients">Ingredients: </label>
<input type="text" id="ingredients" name="recipes[ingredients]" value="<%=@recipe.ingredients%>">

<label for="cook_time">Cook Time: </label>
<input type="text" id="cook_time" name="recipes[cook_time]" value="<%=@recipe.cook_time%>">

<input type="submit" value="Submit">

</form>