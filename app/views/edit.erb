<form method="post" action="/recipes/<%= @recipe.id %>">

    <input id="hidden" name="_method" value="patch">
    Recipe name: <input type="text" name="name" value="<%= @recipe.name %>"><br>
    Recipe Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"><br>
    Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br>
    
    <input type="submit" name="submit">

</form>